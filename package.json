{
  "name": "credo-ts-didcomm-ext",
  "private": true,
  "license": "Apache-2.0",
  "description": "Monorepo containing DIDComm extensions for Credo",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/2060-io/credo-ts-didcomm-ext",
    "type": "git"
  },
  "scripts": {
    "check-types": "pnpm run check-types:build && pnpm run check-types:tests",
    "check-types:tests": "tsc -p tsconfig.test.json --noEmit",
    "check-types:build": "pnpm -r --filter './packages/*' exec tsc --noEmit -p tsconfig.build.json",
    "prettier": "prettier '**/*.+(js|json|ts|tsx|md|yml|yaml)'",
    "format": "pnpm prettier --write",
    "check-format": "pnpm prettier --list-different",
    "test": "vitest -c vitest.config.mts run",
    "lint": "eslint --ignore-path .gitignore --ignore-pattern '**/esm/' .",
    "validate": "pnpm lint && pnpm check-types && pnpm check-format"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.2",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "vitest": "^4.0.15",
    "tsdown": "^0.16.7"
  },
  "engines": {
    "node": ">= 18"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.8"
    },
    "ignoredBuiltDependencies": [
      "es5-ext"
    ]
  },
  "resolutions": {
    "@2060.io/ffi-napi": "4.0.9",
    "@jest/types": "^29.5.0",
    "@types/node": "^18.0.0"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
